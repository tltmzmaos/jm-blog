---
export interface Props {
  size?: 'sm' | 'md' | 'lg';
  className?: string;
}

const { size = 'md', className = '' } = Astro.props;

const sizeClasses = {
  sm: 'w-4 h-4',
  md: 'w-6 h-6', 
  lg: 'w-8 h-8'
};
---

<div class={`inline-block animate-spin ${sizeClasses[size]} ${className}`} role="status" aria-label="Loading">
  <svg class="w-full h-full text-gray-300 dark:text-gray-600" fill="none" viewBox="0 0 24 24">
    <circle 
      class="opacity-25" 
      cx="12" 
      cy="12" 
      r="10" 
      stroke="currentColor" 
      stroke-width="4"
    ></circle>
    <path 
      class="opacity-75 text-primary-600 dark:text-primary-400" 
      fill="currentColor" 
      d="m4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
    ></path>
  </svg>
  <span class="sr-only">Loading...</span>
</div>