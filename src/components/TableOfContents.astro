---
export interface Props {
  headings: Array<{ depth: number; slug: string; text: string }>;
}

const { headings } = Astro.props;

// Show only h2, h3
const filteredHeadings = headings.filter(h => h.depth >= 2 && h.depth <= 3);
---

{filteredHeadings.length > 0 && (
  <aside class="toc-sidebar" aria-label="Table of Contents">
    <div class="toc-container">
      <div class="toc-header">
        <svg class="toc-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M4 6h16M4 12h16M4 18h10"/>
        </svg>
        <span class="toc-title">Contents</span>
      </div>
      <nav class="toc">
        <ul class="toc-list">
          {filteredHeadings.map((heading, index) => (
            <li class={`toc-item depth-${heading.depth}`} style={`--index: ${index}`}>
              <a href={`#${heading.slug}`} class="toc-link" data-slug={heading.slug}>
                <span class="toc-indicator"></span>
                <span class="toc-text">{heading.text}</span>
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </div>
  </aside>
)}

<style>
  .toc-sidebar {
    position: fixed;
    top: 80px;
    right: max(calc((100vw - 720px) / 2 - 280px), 24px);
    width: 240px;
    max-height: calc(100vh - 120px);
    z-index: 50;
  }

  .toc-container {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(0, 0, 0, 0.06);
    border-radius: 12px;
    padding: 1rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.04);
    transition: box-shadow 0.2s;
  }

  .toc-container:hover {
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
  }

  :global(.dark) .toc-container {
    background: rgba(36, 36, 36, 0.9);
    border-color: rgba(255, 255, 255, 0.06);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
  }

  :global(.dark) .toc-container:hover {
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
  }

  .toc-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
    padding-bottom: 0.625rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
  }

  :global(.dark) .toc-header {
    border-bottom-color: rgba(255, 255, 255, 0.06);
  }

  .toc-icon {
    width: 16px;
    height: 16px;
    color: #0066ff;
  }

  :global(.dark) .toc-icon {
    color: #58a6ff;
  }

  .toc-title {
    font-size: 0.75rem;
    font-weight: 600;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  :global(.dark) .toc-title {
    color: #888;
  }

  .toc {
    max-height: calc(100vh - 250px);
    overflow-y: auto;
    scrollbar-width: thin;
    scrollbar-color: rgba(0, 0, 0, 0.1) transparent;
  }

  .toc::-webkit-scrollbar {
    width: 4px;
  }

  .toc::-webkit-scrollbar-track {
    background: transparent;
  }

  .toc::-webkit-scrollbar-thumb {
    background: rgba(0, 0, 0, 0.1);
    border-radius: 2px;
  }

  :global(.dark) .toc::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.1);
  }

  .toc-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .toc-item {
    animation: fadeInUp 0.3s ease forwards;
    animation-delay: calc(var(--index) * 30ms);
    opacity: 0;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(4px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .toc-item.depth-3 {
    padding-left: 1rem;
  }

  .toc-link {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    font-size: 0.8125rem;
    color: #555;
    text-decoration: none;
    padding: 0.375rem 0.5rem;
    border-radius: 6px;
    transition: all 0.15s;
    line-height: 1.4;
  }

  .toc-link:hover {
    color: #0066ff;
    background: rgba(0, 102, 255, 0.04);
  }

  :global(.dark) .toc-link {
    color: #999;
  }

  :global(.dark) .toc-link:hover {
    color: #58a6ff;
    background: rgba(88, 166, 255, 0.08);
  }

  .toc-indicator {
    flex-shrink: 0;
    width: 6px;
    height: 6px;
    margin-top: 0.375rem;
    border-radius: 50%;
    background: #ddd;
    transition: all 0.2s;
  }

  :global(.dark) .toc-indicator {
    background: #444;
  }

  .toc-link:hover .toc-indicator {
    background: #0066ff;
    transform: scale(1.2);
  }

  :global(.dark) .toc-link:hover .toc-indicator {
    background: #58a6ff;
  }

  .toc-link.active {
    color: #0066ff;
    background: rgba(0, 102, 255, 0.06);
    font-weight: 500;
  }

  :global(.dark) .toc-link.active {
    color: #58a6ff;
    background: rgba(88, 166, 255, 0.1);
  }

  .toc-link.active .toc-indicator {
    background: #0066ff;
    box-shadow: 0 0 0 3px rgba(0, 102, 255, 0.15);
    transform: scale(1.3);
  }

  :global(.dark) .toc-link.active .toc-indicator {
    background: #58a6ff;
    box-shadow: 0 0 0 3px rgba(88, 166, 255, 0.2);
  }

  .toc-text {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Hide on narrow screens */
  @media (max-width: 1080px) {
    .toc-sidebar {
      display: none;
    }
  }

  /* Respect reduced motion preference */
  @media (prefers-reduced-motion: reduce) {
    .toc-item {
      animation: none;
      opacity: 1;
    }

    .toc-indicator,
    .toc-link {
      transition: none;
    }
  }
</style>

<script>
  document.addEventListener('astro:page-load', () => {
    const controller = new AbortController();
    const signal = controller.signal;

    document.addEventListener('astro:before-swap', () => controller.abort(), { once: true });

    const tocLinks = document.querySelectorAll<HTMLAnchorElement>('.toc-link');
    if (tocLinks.length === 0) return;

    const headingElements = Array.from(tocLinks).map((link) => {
      const slug = link.dataset.slug;
      return document.getElementById(slug || '');
    }).filter(Boolean) as HTMLElement[];

    if (headingElements.length === 0) return;

    const updateActiveLink = () => {
      const scrollY = window.scrollY;
      const offset = 120;

      // Update active link
      let activeIndex = 0;
      for (let i = 0; i < headingElements.length; i++) {
        if (headingElements[i].offsetTop <= scrollY + offset) {
          activeIndex = i;
        }
      }

      tocLinks.forEach((link, index) => {
        const isActive = index === activeIndex;
        link.classList.toggle('active', isActive);

        // Scroll to keep active link visible
        if (isActive) {
          const toc = link.closest('.toc');
          if (toc) {
            const linkRect = link.getBoundingClientRect();
            const tocRect = toc.getBoundingClientRect();
            if (linkRect.top < tocRect.top || linkRect.bottom > tocRect.bottom) {
              link.scrollIntoView({ block: 'nearest', behavior: 'smooth' });
            }
          }
        }
      });
    };

    // Smooth scroll on click
    tocLinks.forEach((link) => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const slug = link.dataset.slug;
        const target = document.getElementById(slug || '');
        if (target) {
          const offset = 80;
          const targetPosition = target.offsetTop - offset;
          window.scrollTo({ top: targetPosition, behavior: 'smooth' });
        }
      });
    });

    window.addEventListener('scroll', updateActiveLink, { passive: true, signal });
    updateActiveLink();
  });
</script>
