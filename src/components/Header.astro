---
import ThemeToggle from './ThemeToggle.astro';
import SearchBox from './SearchBox.astro';
import Logo from './Logo.astro';

const baseUrl = import.meta.env.BASE_URL;
---

<header class="sticky top-0 z-50 bg-white/80 dark:bg-dark-bg/80 backdrop-blur-sm border-b border-gray-200 dark:border-dark-border">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- 로고 -->
      <div class="flex items-center">
        <a href={baseUrl} class="flex items-center space-x-3 hover:opacity-80 transition-opacity">
          <Logo size="md" />
          <span class="text-xl font-bold text-gray-900 dark:text-dark-text">Jongmin</span>
        </a>
      </div>

      <!-- 검색 및 네비게이션 -->
      <div class="flex items-center space-x-4">
        <SearchBox />
        <nav class="hidden md:flex items-center space-x-6">
          <a href={baseUrl} class="text-gray-700 dark:text-dark-text hover:text-primary-600 dark:hover:text-dark-accent transition-colors">
            Home
          </a>
          <a href={`${baseUrl}posts`} class="text-gray-700 dark:text-dark-text hover:text-primary-600 dark:hover:text-dark-accent transition-colors">
            Posts
          </a>
          <a href={`${baseUrl}tags`} class="text-gray-700 dark:text-dark-text hover:text-primary-600 dark:hover:text-dark-accent transition-colors">
            Tags
          </a>
          <a href={`${baseUrl}about`} class="text-gray-700 dark:text-dark-text hover:text-primary-600 dark:hover:text-dark-accent transition-colors">
            About
          </a>
        </nav>
        <ThemeToggle />
      </div>
    </div>
  </div>
</header>