---
import ThemeToggle from './ThemeToggle.astro';
import SearchBox from './SearchBox.astro';

const baseUrl = import.meta.env.BASE_URL;
const pathname = Astro.url.pathname;

const isActive = (path: string) => {
  if (path === baseUrl || path === '/') return pathname === baseUrl || pathname === '/';
  return pathname.startsWith(path);
};
---

<header class="header">
  <div class="header-inner">
    <a href={baseUrl} class="logo">Jongmin</a>

    <nav class="nav">
      <a href={baseUrl} class:list={["nav-link", { active: isActive('/') }]}>Home</a>
      <a href={`${baseUrl}tags`} class:list={["nav-link", { active: isActive('/tags') }]}>Tags</a>
      <a href={`${baseUrl}about`} class:list={["nav-link", { active: isActive('/about') }]}>About</a>
    </nav>

    <div class="actions">
      <SearchBox />
      <ThemeToggle />
    </div>

    <button class="mobile-menu-btn" aria-label="Open menu" aria-expanded="false" aria-controls="mobile-nav">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
        <path d="M3 12h18M3 6h18M3 18h18"/>
      </svg>
    </button>
  </div>

  <nav class="mobile-nav" id="mobile-nav" aria-label="Mobile navigation">
    <a href={baseUrl} class:list={["mobile-nav-link", { active: isActive('/') }]}>Home</a>
    <a href={`${baseUrl}tags`} class:list={["mobile-nav-link", { active: isActive('/tags') }]}>Tags</a>
    <a href={`${baseUrl}about`} class:list={["mobile-nav-link", { active: isActive('/about') }]}>About</a>
  </nav>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(8px);
    border-bottom: 1px solid #e5e5e5;
  }

  :global(.dark) .header {
    background: rgba(30, 30, 30, 0.95);
    border-bottom-color: #3c3c3c;
  }

  .header-inner {
    max-width: 720px;
    margin: 0 auto;
    padding: 0 1.5rem;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .logo {
    font-size: 1.125rem;
    font-weight: 700;
    color: #1a1a1a;
    text-decoration: none;
    flex-shrink: 0;
  }

  :global(.dark) .logo {
    color: #d4d4d4;
  }

  .nav {
    display: flex;
    gap: 0.25rem;
  }

  .nav-link {
    padding: 0.5rem 0.75rem;
    font-size: 0.875rem;
    color: #666;
    text-decoration: none;
    border-radius: 6px;
    transition: all 0.15s;
  }

  .nav-link:hover {
    color: #1a1a1a;
    background: #f5f5f5;
  }

  :global(.dark) .nav-link {
    color: #808080;
  }

  :global(.dark) .nav-link:hover {
    color: #d4d4d4;
    background: #2a2d2e;
  }

  .nav-link.active {
    color: #0066ff;
    font-weight: 500;
  }

  :global(.dark) .nav-link.active {
    color: #569cd6;
  }

  .actions {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  .mobile-menu-btn {
    display: none;
    padding: 0.5rem;
    color: #666;
    background: none;
    border: none;
    cursor: pointer;
  }

  :global(.dark) .mobile-menu-btn {
    color: #808080;
  }

  .mobile-nav {
    display: none;
    padding: 0.5rem 1.5rem 1rem;
    border-top: 1px solid #e5e5e5;
  }

  :global(.dark) .mobile-nav {
    border-top-color: #3c3c3c;
  }

  .mobile-nav-link {
    display: block;
    padding: 0.75rem 0;
    font-size: 0.9375rem;
    color: #666;
    text-decoration: none;
    border-bottom: 1px solid #e5e5e5;
  }

  .mobile-nav-link:last-child {
    border-bottom: none;
  }

  :global(.dark) .mobile-nav-link {
    color: #808080;
    border-bottom-color: #3c3c3c;
  }

  .mobile-nav-link.active {
    color: #0066ff;
    font-weight: 500;
  }

  :global(.dark) .mobile-nav-link.active {
    color: #569cd6;
  }

  @media (max-width: 768px) {
    .nav {
      display: none;
    }

    .mobile-menu-btn {
      display: block;
    }

    .header.open .mobile-nav {
      display: block;
    }

    .header-inner {
      padding: 0 1rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const header = document.querySelector('.header');
    const menuBtn = document.querySelector('.mobile-menu-btn');

    menuBtn?.addEventListener('click', () => {
      const isOpen = header?.classList.toggle('open');
      menuBtn.setAttribute('aria-expanded', String(isOpen));
      menuBtn.setAttribute('aria-label', isOpen ? 'Close menu' : 'Open menu');
    });
  });
</script>
