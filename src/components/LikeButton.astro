---
export interface Props {
  postSlug: string;
}

const { postSlug } = Astro.props;
---

<button
  class="like-btn"
  data-slug={postSlug}
  type="button"
  aria-label="Like"
>
  <svg class="heart-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
    <path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
  </svg>
  <span class="count">-</span>
</button>

<style>
  .like-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    color: #666;
    background: #f5f5f5;
    border: 1px solid #e0e0e0;
    border-radius: 20px;
    cursor: pointer;
    transition: all 0.2s;
  }

  :global(.dark) .like-btn {
    color: #888;
    background: #2a2a2a;
    border-color: #404040;
  }

  .like-btn:hover:not(:disabled) {
    color: #e53935;
    border-color: #e53935;
  }

  .like-btn.liked {
    color: #e53935;
    background: rgba(229, 57, 53, 0.1);
    border-color: #e53935;
  }

  .like-btn.liked .heart-icon {
    fill: #e53935;
  }

  .like-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .heart-icon {
    width: 18px;
    height: 18px;
    transition: transform 0.2s;
  }

  .like-btn:hover:not(:disabled) .heart-icon {
    transform: scale(1.1);
  }

  .like-btn.liked .heart-icon {
    animation: heartPop 0.3s ease;
  }

  @keyframes heartPop {
    0% { transform: scale(1); }
    50% { transform: scale(1.3); }
    100% { transform: scale(1); }
  }

  .count {
    font-weight: 500;
    min-width: 1ch;
  }
</style>

<script>
  // Get or create user ID for like tracking
  function getOrCreateUserId(): string {
    try {
      let id = localStorage.getItem('blog-uid');
      if (!id) {
        id = crypto.randomUUID();
        localStorage.setItem('blog-uid', id);
      }
      return id;
    } catch {
      // Private browsing or storage disabled
      return crypto.randomUUID();
    }
  }

  // Debounce helper to prevent spam clicks
  function debounce<T extends (...args: unknown[]) => unknown>(fn: T, delay: number) {
    let timeoutId: ReturnType<typeof setTimeout>;
    return (...args: Parameters<T>) => {
      clearTimeout(timeoutId);
      timeoutId = setTimeout(() => fn(...args), delay);
    };
  }

  async function initLikeButtons() {
    const userId = getOrCreateUserId();

    document.querySelectorAll<HTMLButtonElement>('.like-btn').forEach(async (btn) => {
      const slug = btn.dataset.slug;
      if (!slug) {
        btn.disabled = true;
        return;
      }

      const countEl = btn.querySelector('.count')!;
      let isLoading = false;

      // Fetch initial state
      try {
        const res = await fetch(`/api/likes?slug=${encodeURIComponent(slug)}&userId=${encodeURIComponent(userId)}`);
        const data = await res.json();

        if (data.disabled) {
          btn.disabled = true;
          btn.title = 'Like feature is disabled';
          countEl.textContent = '0';
          return;
        }

        countEl.textContent = String(data.count || 0);
        if (data.isLiked) btn.classList.add('liked');
      } catch {
        btn.title = 'Failed to load likes';
        countEl.textContent = '0';
      }

      // Handle click with debouncing
      const handleClick = debounce(async () => {
        if (isLoading) return;
        isLoading = true;
        btn.disabled = true;

        try {
          const res = await fetch('/api/likes', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ slug, userId }),
          });

          if (res.status === 429) {
            btn.title = 'Too many requests. Please wait.';
            return;
          }

          const data = await res.json();
          if (data.error) {
            btn.title = 'Failed to save. Please try again.';
            return;
          }

          countEl.textContent = String(data.count);
          btn.classList.toggle('liked', data.isLiked);
          btn.title = '';
        } catch {
          btn.title = 'Network error. Please try again.';
        } finally {
          isLoading = false;
          btn.disabled = false;
        }
      }, 300);

      btn.addEventListener('click', handleClick);
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initLikeButtons);
  } else {
    initLikeButtons();
  }
</script>
