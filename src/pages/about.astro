    font-size: 1.625rem;
    font-weight: 700;
    color: var(--color-text);
    margin: 0;
    font-variant-numeric: normal;
    letter-spacing: -0.01em;
  }

  .tagline {
    font-size: 1.0625rem;
    color: var(--color-text-secondary);
    margin: 0.25rem 0 0;
  }

  .location {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin: 0.375rem 0 0;
  }

  .social-links {
    position: relative;
    z-index: 1;
    display: flex;
    justify-content: center;
    gap: 0.625rem;
  }

  .social-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 38px;
    height: 38px;
    border-radius: 50%;
    background: var(--color-bg-secondary);
    color: var(--color-text-secondary);
    transition: all 0.25s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .social-btn:hover {
    background: var(--color-accent);
    color: #fff;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(0, 102, 255, 0.3);
  }

