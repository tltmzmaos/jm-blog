      #3b82f6,
      #6366f1,
      #8b5cf6,
      #a855f7,
      #6366f1,
      #3b82f6
    );
    animation: ring-spin 4s linear infinite;
  }

  .avatar-ring::before {
    inset: -3px;
  }

  .avatar-ring::after {
    inset: -6px;
    filter: blur(18px);
    opacity: 0.25;
    transition: opacity 0.4s ease;
  }

  :global(.dark) .avatar-ring::after {
    opacity: 0.45;
  }

  .avatar-ring:hover::after {
    opacity: 0.5;
  }

  :global(.dark) .avatar-ring:hover::after {
    opacity: 0.65;
  }

  @keyframes ring-spin {
    to {
      transform: rotate(360deg);
    }
  }

