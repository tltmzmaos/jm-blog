---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import { shouldShowDrafts } from '../utils/env';

const showDrafts = shouldShowDrafts();
const allPosts = await getCollection('blog');
const publishedPosts = allPosts.filter(post => showDrafts || !post.data.draft);

const totalPosts = publishedPosts.length;
const allTags = new Set(publishedPosts.flatMap(post => post.data.tags));
const totalTags = allTags.size;

const tagCounts = publishedPosts.reduce((acc, post) => {
  post.data.tags.forEach(tag => { acc[tag] = (acc[tag] || 0) + 1; });
  return acc;
}, {} as Record<string, number>);
const topTag = Object.entries(tagCounts).sort(([,a], [,b]) => b - a)[0]?.[0] || '';

const timeline = [
  { year: '2025', title: 'Software Engineer — Lab Automation', desc: 'Moved to Bay Area. Biotech company — orchestration, scheduling, equipment integration.' },
  { year: '2024', title: 'OMSCS @ Georgia Tech', desc: "Master's in CS, focusing on AI and Machine Learning." },
  { year: '2021', title: 'Graduated UC Irvine → Automotive', desc: 'B.S. in Computer Science. Then ~4.5 years in vehicle diagnostics — high-volume data processing, system consistency, data integrity.' },
  { year: '2016', title: 'Moved to the US', desc: 'Came from South Korea after military service. Started college in California.' },
];

const techStack = [
  { name: 'C#', icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/csharp/csharp-original.svg' },
  { name: '.NET', icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/dotnetcore/dotnetcore-original.svg' },
  { name: '.NET Framework', icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/dot-net/dot-net-original.svg' },
  { name: 'SQL Server', icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/microsoftsqlserver/microsoftsqlserver-plain.svg' },
  { name: 'React', icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/react/react-original.svg' },
  { name: 'Python', icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/python/python-original.svg' },
  { name: 'Swift', icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/swift/swift-original.svg' },
  { name: 'Java', icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/java/java-original.svg' },
  { name: 'SQLite', icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/sqlite/sqlite-original.svg' },
];
---

<BaseLayout title="About - Jongmin" description="Software engineer working on lab automation. From Korea to California, building systems that work.">
  <Header />

  <main class="about-page">
    <section class="hero">
      <div class="hero-content">
        <div class="avatar">
          <span class="avatar-text">JL</span>
        </div>
        <div class="hero-text">
          <h1>Jongmin Lee</h1>
          <p class="tagline">Software Engineer</p>
          <p class="location">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/>
              <circle cx="12" cy="10" r="3"/>
            </svg>
            Bay Area, CA
          </p>
        </div>
      </div>

      <div class="social-links">
        <a href="mailto:tltmzmaos@gmail.com" class="social-btn" aria-label="Email">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="2" y="4" width="20" height="16" rx="2"/>
            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
          </svg>
        </a>
        <a href="https://github.com/tltmzmaos" target="_blank" rel="noopener" class="social-btn" aria-label="GitHub">
          <svg viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
        <a href="https://linkedin.com/in/jml1228" target="_blank" rel="noopener" class="social-btn" aria-label="LinkedIn">
          <svg viewBox="0 0 24 24" fill="currentColor">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
      </div>
    </section>

    <article class="content">
      <section class="intro">
        <p>
          Software engineer with experience across automotive and lab automation industries.
          I write about software engineering, applying AI to real-world systems, and
          lessons from building things that need to work reliably.
        </p>
      </section>

      <section class="stats">
        <div class="stat">
          <span class="stat-number">{totalPosts}</span>
          <span class="stat-label">Posts</span>
        </div>
        <div class="stat">
          <span class="stat-number">{totalTags}</span>
          <span class="stat-label">Tags</span>
        </div>
        <div class="stat">
          <span class="stat-number">#{topTag}</span>
          <span class="stat-label">Top Topic</span>
        </div>
      </section>

      <section class="timeline-section">
        <h2>Background</h2>
        <div class="timeline">
          {timeline.map((item, i) => (
            <div class:list={['timeline-item', { last: i === timeline.length - 1 }]}>
              <div class="timeline-marker">
                <span class="timeline-year">{item.year}</span>
                <span class="timeline-dot"></span>
              </div>
              <div class="timeline-content">
                <h3>{item.title}</h3>
                <p>{item.desc}</p>
              </div>
            </div>
          ))}
        </div>
      </section>

      <section class="tech-section">
        <h2>Tech Stack</h2>
        <div class="tech-list">
          {techStack.map(tech => (
            <span class="tech-badge">
              <img src={tech.icon} alt={tech.name} width="16" height="16" loading="lazy" />
              {tech.name}
            </span>
          ))}
        </div>
      </section>

      <section class="now-section">
        <h2>Now</h2>
        <ul class="now-list">
          <li>Building orchestration services for lab automation equipment</li>
          <li>Pursuing OMSCS, focusing on AI and machine learning</li>
          <li>Exploring offline AI and edge deployment for industrial software</li>
        </ul>
      </section>
    </article>
  </main>
</BaseLayout>

<style>
  .about-page {
    max-width: 720px;
    margin: 0 auto;
    padding: 2rem 1.5rem 4rem;
  }

  /* Hero Section */
  .hero {
    text-align: center;
    padding: 2rem 0 2.5rem;
    border-bottom: 1px solid #eee;
    margin-bottom: 2.5rem;
  }

  :global(.dark) .hero {
    border-bottom-color: #3c3c3c;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.25rem;
    margin-bottom: 1.5rem;
  }

  .avatar {
    width: 96px;
    height: 96px;
    border-radius: 50%;
    background: linear-gradient(135deg, #0066ff 0%, #5b21b6 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 20px rgba(0, 102, 255, 0.25);
  }

  .avatar-text {
    font-size: 1.875rem;
    font-weight: 700;
    color: #fff;
    letter-spacing: -0.02em;
  }

  .hero-text h1 {
    font-size: 1.625rem;
    font-weight: 700;
    color: #1a1a1a;
    margin: 0;
  }

  :global(.dark) .hero-text h1 {
    color: #d4d4d4;
  }

  .tagline {
    font-size: 1.0625rem;
    color: #666;
    margin: 0.25rem 0 0;
  }

  :global(.dark) .tagline {
    color: #808080;
  }

  .location {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.875rem;
    color: #888;
    margin: 0.375rem 0 0;
  }

  :global(.dark) .location {
    color: #808080;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 0.625rem;
  }

  .social-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 38px;
    height: 38px;
    border-radius: 50%;
    background: #f0f0f0;
    color: #555;
    transition: all 0.2s;
  }

  :global(.dark) .social-btn {
    background: #2a2d2e;
    color: #808080;
  }

  .social-btn:hover {
    background: #0066ff;
    color: #fff;
    transform: translateY(-2px);
  }

  .social-btn svg {
    width: 18px;
    height: 18px;
  }

  /* Content */
  .content {
    font-size: 1.0625rem;
    line-height: 1.8;
    color: #333;
  }

  :global(.dark) .content {
    color: #d4d4d4;
  }

  .content section {
    margin-bottom: 2.5rem;
  }

  .content section:last-child {
    margin-bottom: 0;
  }

  .content h2 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1a1a1a;
    margin: 0 0 1.25rem;
  }

  :global(.dark) .content h2 {
    color: #d4d4d4;
  }

  /* Intro */
  .intro {
    font-size: 1.125rem;
    color: #555;
  }

  :global(.dark) .intro {
    color: #808080;
  }

  .intro p {
    margin: 0;
  }

  /* Stats */
  .stats {
    display: flex;
    gap: 1px;
    background: #e5e5e5;
    border-radius: 10px;
    overflow: hidden;
  }

  :global(.dark) .stats {
    background: #3c3c3c;
  }

  .stat {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
    padding: 1.25rem 1rem;
    background: #f8f9fa;
  }

  :global(.dark) .stat {
    background: #252526;
  }

  .stat-number {
    font-size: 1.25rem;
    font-weight: 700;
    color: #1a1a1a;
  }

  :global(.dark) .stat-number {
    color: #d4d4d4;
  }

  .stat-label {
    font-size: 0.75rem;
    color: #888;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Timeline */
  .timeline {
    position: relative;
  }

  .timeline-item {
    display: flex;
    gap: 1.25rem;
    position: relative;
    padding-bottom: 2rem;
  }

  .timeline-item.last {
    padding-bottom: 0;
  }

  .timeline-marker {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex-shrink: 0;
    width: 48px;
    gap: 0.5rem;
  }

  .timeline-year {
    font-size: 0.75rem;
    font-weight: 600;
    color: #0066ff;
    white-space: nowrap;
  }

  :global(.dark) .timeline-year {
    color: #58a6ff;
  }

  .timeline-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #0066ff;
    flex-shrink: 0;
  }

  :global(.dark) .timeline-dot {
    background: #58a6ff;
  }

  .timeline-item:not(.last) .timeline-marker::after {
    content: '';
    flex: 1;
    width: 1px;
    background: #e0e0e0;
    min-height: 100%;
  }

  :global(.dark) .timeline-item:not(.last) .timeline-marker::after {
    background: #3c3c3c;
  }

  .timeline-content {
    padding-top: 0;
  }

  .timeline-content h3 {
    font-size: 0.9375rem;
    font-weight: 600;
    color: #1a1a1a;
    margin: 0 0 0.375rem;
    line-height: 1.4;
  }

  :global(.dark) .timeline-content h3 {
    color: #d4d4d4;
  }

  .timeline-content p {
    font-size: 0.875rem;
    color: #666;
    margin: 0;
    line-height: 1.6;
  }

  :global(.dark) .timeline-content p {
    color: #808080;
  }

  /* Tech Stack */
  .tech-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.375rem 0.75rem;
    font-size: 0.8125rem;
    font-weight: 500;
    color: #444;
    background: #f0f0f0;
    border-radius: 6px;
  }

  :global(.dark) .tech-badge {
    color: #ccc;
    background: #2a2d2e;
  }

  .tech-badge img {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
  }

  /* Now Section */
  .now-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
  }

  .now-list li {
    display: flex;
    align-items: flex-start;
    gap: 0.625rem;
    font-size: 0.9375rem;
    color: #444;
    line-height: 1.6;
  }

  :global(.dark) .now-list li {
    color: #999;
  }

  .now-list li::before {
    content: '';
    flex-shrink: 0;
    width: 6px;
    height: 6px;
    margin-top: 0.5rem;
    border-radius: 50%;
    background: #0066ff;
  }

  :global(.dark) .now-list li::before {
    background: #58a6ff;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .about-page {
      padding: 1.5rem 1rem 3rem;
    }

    .hero {
      padding: 1.5rem 0 2rem;
    }

    .avatar {
      width: 80px;
      height: 80px;
    }

    .avatar-text {
      font-size: 1.5rem;
    }

    .hero-text h1 {
      font-size: 1.375rem;
    }

    .content {
      font-size: 1rem;
    }

    .stat-number {
      font-size: 1.125rem;
    }

    .timeline-item {
      gap: 1rem;
    }
  }
</style>
