---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import PostCard from '../components/PostCard.astro';
import Logo from '../components/Logo.astro';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const recentPosts = sortedPosts.slice(0, 6);
---

<BaseLayout title="Jongmin - Dev Blog" description="Jongmin's blog sharing development experiences and technology insights.">
  <Header />
  
  <main class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- 히어로 섹션 -->
    <section class="text-center py-12 mb-12">
      <div class="flex items-center justify-center gap-4 mb-4">
        <Logo size="lg" className="w-16 h-16" />
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-dark-text">
          Jongmin's Dev Blog
        </h1>
      </div>
      <p class="text-xl text-gray-600 dark:text-dark-subtext max-w-2xl mx-auto">
        Sharing experiences and insights about software engineering and development
    </section>

    <!-- 최근 포스트 -->
    <section>
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-dark-text">
          Recent Posts
        </h2>
        <a 
          href="/posts" 
          class="text-primary-600 dark:text-dark-accent hover:text-primary-700 dark:hover:text-dark-accentHover font-medium transition-colors"
        >
          View All Posts →
        </a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {recentPosts.map(async (post) => {
          const { Content } = await post.render();
          return (
            <PostCard
              title={post.data.title}
              description={post.data.description}
              pubDate={post.data.pubDate}
              heroImage={post.data.heroImage}
              tags={post.data.tags}
              slug={post.slug}
              author={post.data.author}
              content={post.body}
            />
          );
        })}
      </div>

      {recentPosts.length === 0 && (
        <div class="text-center py-12">
          <p class="text-gray-500 dark:text-dark-subtext">No posts yet.</p>
        </div>
      )}
    </section>
  </main>
</BaseLayout>
