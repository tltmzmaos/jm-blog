  <!-- Three.js from CDN with SRI (r134 is the last version with bundled three.min.js) -->
  <script
    is:inline
    src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.min.js"
    integrity="sha384-9EQoUIJYrv09/oYhSxnw1VpLcfPw3BM9dE7+D/3wGUPeLLa7F9Z6OAoD+i/M6FK9"
    crossorigin="anonymous"
  ></script>

  <script is:inline define:vars={{ graphData, postsByTag }}>
    const container = document.getElementById('three-container');
    const tooltip = document.getElementById('graph-tooltip');
    const viewToggle = document.getElementById('view-toggle');
    const autoRotateBtn = document.getElementById('auto-rotate');

    let scene, camera, renderer;
    let nodes = [];
    let glowMeshes = [];
    let links = [];
    let labels = [];
    let particles;
    let selectedNode = null;
    let hoveredNode = null;
    let autoRotate = true;
    let is3D = true;
    let time = 0;

    const isDark = () => document.documentElement.classList.contains('dark');

    // HTML escape function to prevent XSS
    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    // Hub tag colors - main tags get distinct colors, connected tags inherit
    const hubColors = {
      'Machine Learning': { main: 0x9b59b6, glow: 0xd8b4fe, css: '#9b59b6' },
      'OMSCS': { main: 0x3498db, glow: 0x85c1e9, css: '#3498db' },
      'Georgia Tech': { main: 0x3498db, glow: 0x85c1e9, css: '#3498db' },
      'Clean Code': { main: 0x2ecc71, glow: 0x82e0aa, css: '#2ecc71' },
      'Clean Architecture': { main: 0x27ae60, glow: 0x82e0aa, css: '#27ae60' },
      'Software Engineering': { main: 0x16a085, glow: 0x76d7c4, css: '#16a085' },
      'Best Practices': { main: 0xe67e22, glow: 0xf5b041, css: '#e67e22' },
      'Backend': { main: 0xe74c3c, glow: 0xf1948a, css: '#e74c3c' },
      'Neural Networks': { main: 0x8e44ad, glow: 0xbb8fce, css: '#8e44ad' },
      'TensorFlow': { main: 0xff6f00, glow: 0xffab40, css: '#ff6f00' },
    };

    const defaultColor = { main: 0x4a9eff, glow: 0x85c1e9, css: '#4a9eff' };

    // Build connection strength map to find hub for each tag
    function findHubColor(tagId, adjacency) {
      // If this tag is a hub itself, use its color
      if (hubColors[tagId]) {
        return hubColors[tagId];
      }

      // Find the most strongly connected hub
      const connections = adjacency[tagId] || [];
      let bestHub = null;
      let bestStrength = 0;

      connections.forEach(conn => {
        if (hubColors[conn.target] && conn.strength > bestStrength) {
          bestHub = conn.target;
          bestStrength = conn.strength;
        }
      });

      // If connected to a hub, use that hub's color with slight variation
      if (bestHub) {
        return hubColors[bestHub];
      }

      // Check indirect connections (2 hops)
      for (const conn of connections) {
        const secondaryConns = adjacency[conn.target] || [];
        for (const sec of secondaryConns) {
          if (hubColors[sec.target]) {
            return hubColors[sec.target];
          }
        }
      }

      return defaultColor;
    }

    function getTagCategory(tag) {
      const t = tag.toLowerCase();
      if (t.includes('machine') || t.includes('neural') || t.includes('learning') ||
          t.includes('tensorflow') || t.includes('classification') || t.includes('regression') ||
          t.includes('clustering') || t.includes('xgboost') || t.includes('decision')) {
        return 'ml';
      }
      if (t.includes('omscs') || t.includes('georgia') || t.includes('cs6') || t.includes('ai4r') ||
          t.includes('robotics') || t.includes('android') || t.includes('sdp')) {
        return 'omscs';
      }
      if (t.includes('clean') || t.includes('solid') || t.includes('robert') || t.includes('martin') ||
          t.includes('architecture')) {
        return 'clean';
      }
      if (t.includes('api') || t.includes('logging') || t.includes('dotnet') || t.includes('webform') ||
          t.includes('best practice') || t.includes('devops') || t.includes('backend') ||
          t.includes('software') || t.includes('testing')) {
        return 'dev';
      }
      return 'default';
    }

    function init() {
      const width = container.clientWidth;
      const height = 500;

      // Scene with fog for depth
      scene = new THREE.Scene();
      scene.background = new THREE.Color(isDark() ? 0x0d1117 : 0xf8fafc);
      scene.fog = new THREE.Fog(isDark() ? 0x0d1117 : 0xf8fafc, 150, 400);

      // Camera
      camera = new THREE.PerspectiveCamera(60, width / height, 0.1, 1000);
      camera.position.z = 180;

      // Renderer
      renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });
      renderer.setSize(width, height);
      renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
      container.appendChild(renderer.domElement);

      // Ambient light
      const ambientLight = new THREE.AmbientLight(0xffffff, 0.4);
      scene.add(ambientLight);

      // Main directional light
      const dirLight = new THREE.DirectionalLight(0xffffff, 0.8);
      dirLight.position.set(50, 50, 50);
      scene.add(dirLight);

      // Accent lights for dramatic effect
      const blueLight = new THREE.PointLight(0x4a9eff, 0.6, 200);
      blueLight.position.set(-80, 40, 60);
      scene.add(blueLight);

      const purpleLight = new THREE.PointLight(0x9b59b6, 0.4, 200);
      purpleLight.position.set(80, -40, -60);
      scene.add(purpleLight);

      // Create starfield particles
      createParticles();

      // Create nodes
      const maxCount = Math.max(...graphData.nodes.map(n => n.count));
      const minCount = Math.min(...graphData.nodes.map(n => n.count));
      const countRange = maxCount - minCount || 1;

      // Build adjacency map for force-directed positioning
      const adjacency = {};
      graphData.nodes.forEach(n => { adjacency[n.id] = []; });
      graphData.links.forEach(link => {
        adjacency[link.source].push({ target: link.target, strength: link.strength });
        adjacency[link.target].push({ target: link.source, strength: link.strength });
      });

      // Initial random positions
      const positions = {};
      graphData.nodes.forEach((node, i) => {
        const angle = (i / graphData.nodes.length) * Math.PI * 2;
        const radius = 60 + Math.random() * 30;
        positions[node.id] = {
          x: Math.cos(angle) * radius,
          y: (Math.random() - 0.5) * 80,
          z: Math.sin(angle) * radius
        };
      });

      // Calculate node radii for collision detection
      const nodeRadii = {};
      graphData.nodes.forEach(node => {
        const normalizedCount = (node.count - minCount) / countRange;
        nodeRadii[node.id] = 4 + normalizedCount * 8;
      });

      // Force-directed layout with collision prevention
      for (let iter = 0; iter < 80; iter++) {
        const forces = {};
        graphData.nodes.forEach(n => { forces[n.id] = { x: 0, y: 0, z: 0 }; });

        // Repulsion between all nodes (stronger when overlapping)
        graphData.nodes.forEach((n1, i) => {
          graphData.nodes.forEach((n2, j) => {
            if (i >= j) return;
            const p1 = positions[n1.id];
            const p2 = positions[n2.id];
            const dx = p2.x - p1.x;
            const dy = p2.y - p1.y;
            const dz = p2.z - p1.z;
            const dist = Math.sqrt(dx*dx + dy*dy + dz*dz) || 0.1;

            // Minimum distance = sum of radii + padding
            const minDist = nodeRadii[n1.id] + nodeRadii[n2.id] + 8;

            // Strong repulsion when overlapping, normal repulsion otherwise
            let repulsion;
            if (dist < minDist) {
              // Very strong push when overlapping
              repulsion = (minDist - dist) * 5 + 800 / (dist * dist);
            } else {
              repulsion = 800 / (dist * dist);
            }

            forces[n1.id].x -= (dx / dist) * repulsion;
            forces[n1.id].y -= (dy / dist) * repulsion;
            forces[n1.id].z -= (dz / dist) * repulsion;
            forces[n2.id].x += (dx / dist) * repulsion;
            forces[n2.id].y += (dy / dist) * repulsion;
            forces[n2.id].z += (dz / dist) * repulsion;
          });
        });

        // Attraction for connected nodes
        graphData.links.forEach(link => {
          const p1 = positions[link.source];
          const p2 = positions[link.target];
          const dx = p2.x - p1.x;
          const dy = p2.y - p1.y;
          const dz = p2.z - p1.z;
          const dist = Math.sqrt(dx*dx + dy*dy + dz*dz) || 1;

          // Target distance based on radii
          const targetDist = nodeRadii[link.source] + nodeRadii[link.target] + 25;
          const attraction = (dist - targetDist) * 0.02 * link.strength;

          forces[link.source].x += (dx / dist) * attraction;
          forces[link.source].y += (dy / dist) * attraction;
          forces[link.source].z += (dz / dist) * attraction;
          forces[link.target].x -= (dx / dist) * attraction;
          forces[link.target].y -= (dy / dist) * attraction;
          forces[link.target].z -= (dz / dist) * attraction;
        });

        // Apply forces with decreasing damping
        const damping = 0.5 * (1 - iter / 100);
        graphData.nodes.forEach(n => {
          positions[n.id].x += forces[n.id].x * damping;
          positions[n.id].y += forces[n.id].y * damping;
          positions[n.id].z += forces[n.id].z * damping;
        });
      }

      // Create node meshes
      graphData.nodes.forEach((node) => {
        const normalizedCount = (node.count - minCount) / countRange;
        const nodeRadius = 4 + normalizedCount * 8;

        const category = getTagCategory(node.id);
        const colors = findHubColor(node.id, adjacency);
        const pos = positions[node.id];

        const geometry = new THREE.SphereGeometry(nodeRadius, 32, 32);
        const material = new THREE.MeshPhongMaterial({
          color: colors.main,
          emissive: colors.main,
          emissiveIntensity: 0.3,
          shininess: 150,
          transparent: true,
          opacity: 0.95,
          specular: 0xffffff
        });

        const mesh = new THREE.Mesh(geometry, material);
        mesh.position.set(pos.x, pos.y, pos.z);
        mesh.userData = {
          id: node.id,
          count: node.count,
          radius: nodeRadius,
          originalColor: colors.main,
          glowColor: colors.glow,
          category: category,
          pulsePhase: Math.random() * Math.PI * 2
        };

        scene.add(mesh);
        nodes.push(mesh);

        // Outer glow sphere
        const glowGeometry = new THREE.SphereGeometry(nodeRadius * 1.3, 16, 16);
        const glowMaterial = new THREE.MeshBasicMaterial({
          color: colors.glow,
          transparent: true,
          opacity: 0.12,
          side: THREE.BackSide
        });
        const glowMesh = new THREE.Mesh(glowGeometry, glowMaterial);
        glowMesh.position.copy(mesh.position);
        glowMesh.userData = { parentNode: mesh };
        scene.add(glowMesh);
        glowMeshes.push(glowMesh);
      });

      // Create curved links
      graphData.links.forEach(linkData => {
        const sourceNode = nodes.find(n => n.userData.id === linkData.source);
        const targetNode = nodes.find(n => n.userData.id === linkData.target);

        if (sourceNode && targetNode) {
          // Create curved line
          const midPoint = new THREE.Vector3()
            .addVectors(sourceNode.position, targetNode.position)
            .multiplyScalar(0.5);
          midPoint.y += 10; // Curve upward

          const curve = new THREE.QuadraticBezierCurve3(
            sourceNode.position,
            midPoint,
            targetNode.position
          );
          const curvePoints = curve.getPoints(20);
          const geometry = new THREE.BufferGeometry().setFromPoints(curvePoints);

          const material = new THREE.LineBasicMaterial({
            color: isDark() ? 0x3d4f5f : 0xbdc3c7,
            transparent: true,
            opacity: 0.25,
            linewidth: linkData.strength
          });

          const line = new THREE.Line(geometry, material);
          line.userData = { source: sourceNode, target: targetNode, strength: linkData.strength };
          scene.add(line);
          links.push(line);
        }
      });

      // Create text labels (simplified - no labels for cleaner look, rely on hover)
      nodes.forEach(node => {
        const canvas = document.createElement('canvas');
        const ctx = canvas.getContext('2d');
        canvas.width = 512;
        canvas.height = 64;

        ctx.font = 'bold 28px -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif';
        ctx.fillStyle = isDark() ? '#ffffff' : '#1a1a1a';
        ctx.textAlign = 'center';
        ctx.textBaseline = 'middle';

        // Truncate long labels
        let label = node.userData.id;
        if (label.length > 20) {
          label = label.substring(0, 18) + '...';
        }
        ctx.fillText(label, canvas.width / 2, canvas.height / 2);

        const texture = new THREE.CanvasTexture(canvas);
        const spriteMaterial = new THREE.SpriteMaterial({
          map: texture,
          transparent: true,
          opacity: 0.9,
          depthTest: false
        });
        const sprite = new THREE.Sprite(spriteMaterial);
        sprite.scale.set(45, 7, 1);
        sprite.position.copy(node.position);
        sprite.position.y -= node.userData.radius + 4;  // Closer to sphere
        sprite.userData = { parentNode: node };

        scene.add(sprite);
        labels.push(sprite);
      });

      setupInteractions();
    }

    function createParticles() {
      const particleCount = 200;
      const positions = new Float32Array(particleCount * 3);
      const colors = new Float32Array(particleCount * 3);

      for (let i = 0; i < particleCount; i++) {
        positions[i * 3] = (Math.random() - 0.5) * 400;
        positions[i * 3 + 1] = (Math.random() - 0.5) * 400;
        positions[i * 3 + 2] = (Math.random() - 0.5) * 400;

        const brightness = 0.3 + Math.random() * 0.4;
        colors[i * 3] = brightness;
        colors[i * 3 + 1] = brightness;
        colors[i * 3 + 2] = brightness + 0.1;
      }

      const geometry = new THREE.BufferGeometry();
      geometry.setAttribute('position', new THREE.BufferAttribute(positions, 3));
      geometry.setAttribute('color', new THREE.BufferAttribute(colors, 3));

      const material = new THREE.PointsMaterial({
        size: 1.5,
        vertexColors: true,
        transparent: true,
        opacity: isDark() ? 0.6 : 0.3
      });

      particles = new THREE.Points(geometry, material);
      scene.add(particles);
    }

    function setupInteractions() {
      const raycaster = new THREE.Raycaster();
      const mouse = new THREE.Vector2();

      renderer.domElement.addEventListener('mousemove', (e) => {
        const rect = renderer.domElement.getBoundingClientRect();
        mouse.x = ((e.clientX - rect.left) / rect.width) * 2 - 1;
        mouse.y = -((e.clientY - rect.top) / rect.height) * 2 + 1;

        raycaster.setFromCamera(mouse, camera);
        const intersects = raycaster.intersectObjects(nodes);

        if (intersects.length > 0) {
          const node = intersects[0].object;
          if (hoveredNode !== node) {
            if (hoveredNode && hoveredNode !== selectedNode) {
              hoveredNode.material.emissiveIntensity = 0.3;
              hoveredNode.scale.setScalar(1);
            }
            hoveredNode = node;
            hoveredNode.material.emissiveIntensity = 0.6;
            hoveredNode.scale.setScalar(1.15);
          }

          tooltip.style.display = 'block';
          tooltip.style.left = (e.clientX - rect.left + 15) + 'px';
          tooltip.style.top = (e.clientY - rect.top - 10) + 'px';
          tooltip.innerHTML = `<strong>${escapeHtml(node.userData.id)}</strong><br>${node.userData.count} post${node.userData.count > 1 ? 's' : ''}`;
          renderer.domElement.style.cursor = 'pointer';
        } else {
          if (hoveredNode && hoveredNode !== selectedNode) {
            hoveredNode.material.emissiveIntensity = 0.3;
            hoveredNode.scale.setScalar(1);
          }
          hoveredNode = null;
          tooltip.style.display = 'none';
          renderer.domElement.style.cursor = 'grab';
        }
      });

      renderer.domElement.addEventListener('click', (e) => {
        const rect = renderer.domElement.getBoundingClientRect();
        mouse.x = ((e.clientX - rect.left) / rect.width) * 2 - 1;
        mouse.y = -((e.clientY - rect.top) / rect.height) * 2 + 1;

        raycaster.setFromCamera(mouse, camera);
        const intersects = raycaster.intersectObjects(nodes);

        if (intersects.length > 0) {
          const node = intersects[0].object;

          // Reset previous selection
          if (selectedNode) {
            selectedNode.material.color.setHex(selectedNode.userData.originalColor);
            selectedNode.material.emissive.setHex(selectedNode.userData.originalColor);
            selectedNode.material.emissiveIntensity = 0.3;
            selectedNode.scale.setScalar(1);

            // Reset glow for previous selection
            const prevGlow = glowMeshes.find(g => g.userData.parentNode === selectedNode);
            if (prevGlow) {
              prevGlow.material.color.setHex(selectedNode.userData.glowColor);
              prevGlow.scale.setScalar(1);
            }
          }

          selectedNode = node;

          // Enhanced selection highlight - bright orange/gold that works in both modes
          const dark = isDark();
          const highlightCore = 0xffa500;  // Bright orange - visible in both modes
          const highlightGlow = 0xffcc00;  // Golden yellow glow

          node.material.color.setHex(highlightCore);
          node.material.emissive.setHex(highlightGlow);
          node.material.emissiveIntensity = 1.2;
          node.scale.setScalar(1.4);  // Bigger to stand out

          // Make glow more prominent for selected node
          const selectedGlow = glowMeshes.find(g => g.userData.parentNode === node);
          if (selectedGlow) {
            selectedGlow.material.color.setHex(highlightGlow);
            selectedGlow.scale.setScalar(1.8);
            selectedGlow.material.opacity = 0.6;
          }

          // Highlight connected links
          links.forEach(link => {
            const isConnected = link.userData.source === node || link.userData.target === node;
            link.material.opacity = isConnected ? 0.7 : 0.15;
            if (isConnected) {
              link.material.color.setHex(0x4a9eff);
              link.material.linewidth = 2;
            } else {
              link.material.color.setHex(dark ? 0x3d4f5f : 0xbdc3c7);
            }
          });

          // Other nodes: connected stay normal, non-connected slightly dimmed
          nodes.forEach(n => {
            if (n !== node) {
              const isConnected = links.some(l =>
                (l.userData.source === node && l.userData.target === n) ||
                (l.userData.target === node && l.userData.source === n)
              );
              // Less aggressive dimming - non-connected still visible
              n.material.opacity = isConnected ? 1.0 : 0.5;
              n.material.emissiveIntensity = isConnected ? 0.4 : 0.2;

              // Connected nodes get slight scale boost
              if (isConnected) {
                n.scale.setScalar(1.05);
              } else {
                n.scale.setScalar(0.95);
              }
            }
          });

          // Also dim/highlight glows
          glowMeshes.forEach(glow => {
            if (glow.userData.parentNode !== node) {
              const isConnected = links.some(l =>
                (l.userData.source === node && l.userData.target === glow.userData.parentNode) ||
                (l.userData.target === node && l.userData.source === glow.userData.parentNode)
              );
              glow.material.opacity = isConnected ? 0.15 : 0.03;
            }
          });

          showPosts(node.userData.id, node.userData.category);
        }
      });

      // Drag rotation
      let isDragging = false;
      let prevMouse = { x: 0, y: 0 };

      renderer.domElement.addEventListener('mousedown', (e) => {
        isDragging = true;
        prevMouse = { x: e.clientX, y: e.clientY };
        renderer.domElement.style.cursor = 'grabbing';
      });

      renderer.domElement.addEventListener('mouseup', () => {
        isDragging = false;
        renderer.domElement.style.cursor = hoveredNode ? 'pointer' : 'grab';
      });

      renderer.domElement.addEventListener('mousemove', (e) => {
        if (!isDragging) return;
        scene.rotation.y += (e.clientX - prevMouse.x) * 0.004;
        scene.rotation.x += (e.clientY - prevMouse.y) * 0.004;
        prevMouse = { x: e.clientX, y: e.clientY };
      });

      renderer.domElement.addEventListener('wheel', (e) => {
        e.preventDefault();
        camera.position.z = Math.max(80, Math.min(350, camera.position.z + e.deltaY * 0.5));
      }, { passive: false });

      // View toggle
      viewToggle.addEventListener('click', () => {
        is3D = !is3D;
        viewToggle.querySelector('.icon-3d').textContent = is3D ? '3D' : '2D';

        if (is3D) {
          // Restore to spherical distribution
          nodes.forEach((mesh, i) => {
            const angle = (i / nodes.length) * Math.PI * 2;
            const radius = 50 + Math.random() * 30;
            mesh.position.set(
              Math.cos(angle) * radius,
              (Math.random() - 0.5) * 60,
              Math.sin(angle) * radius
            );
          });
        } else {
          const cols = Math.ceil(Math.sqrt(nodes.length));
          nodes.forEach((mesh, i) => {
            mesh.position.set(
              (i % cols - cols / 2) * 22,
              (Math.floor(i / cols) - cols / 2) * -22,
              0
            );
          });
          scene.rotation.set(0, 0, 0);
        }

        // Update glow positions
        glowMeshes.forEach(glow => {
          glow.position.copy(glow.userData.parentNode.position);
        });

        // Update labels
        labels.forEach(label => {
          const node = label.userData.parentNode;
          label.position.copy(node.position);
          label.position.y -= node.userData.radius + 4;
        });

        updateLinks();
      });

      // Auto rotate toggle
      autoRotateBtn.addEventListener('click', () => {
        autoRotate = !autoRotate;
        autoRotateBtn.classList.toggle('active', autoRotate);
        autoRotateBtn.setAttribute('aria-pressed', String(autoRotate));
      });
    }

    function updateLinks() {
      links.forEach(link => {
        const mid = new THREE.Vector3()
          .addVectors(link.userData.source.position, link.userData.target.position)
          .multiplyScalar(0.5);
        mid.y += 10;

        const curve = new THREE.QuadraticBezierCurve3(
          link.userData.source.position,
          mid,
          link.userData.target.position
        );
        const points = curve.getPoints(20);
        link.geometry.setFromPoints(points);
      });
    }

    function showPosts(tag, category) {
      const posts = postsByTag[tag] || [];
      const previewTitle = document.getElementById('preview-title');
      const tagBadge = document.getElementById('tag-badge');
      const viewAllLink = document.getElementById('view-all-link');
      const postsList = document.getElementById('posts-list');

      // Update title with tag badge
      if (tagBadge) {
        tagBadge.textContent = posts.length;
        tagBadge.className = `tag-badge ${category}`;
        tagBadge.style.display = 'inline-flex';
      }
      if (previewTitle) previewTitle.textContent = tag;
      if (viewAllLink) {
        viewAllLink.href = `/tags/${encodeURIComponent(tag)}`;
        viewAllLink.style.display = 'inline-flex';
      }

      if (postsList) {
        if (posts.length === 0) {
          postsList.innerHTML = '<div class="hint-card"><p>No posts found for this tag</p></div>';
        } else {
          const formatDate = (date) => new Date(date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });

          postsList.innerHTML = posts.slice(0, 5).map(post => `
            <article class="post-item">
              <a href="/posts/${escapeHtml(post.slug)}" class="post-link">
                ${post.data.heroImage ? `
                  <div class="thumbnail">
                    <img src="${escapeHtml(post.data.heroImage)}" alt="" loading="lazy" decoding="async" width="140" height="90" />
                  </div>
                ` : ''}
                <div class="content">
                  <h2 class="title">${escapeHtml(post.data.title)}</h2>
                  <p class="description">${escapeHtml(post.data.description || '')}</p>
                  <div class="meta">
                    <time datetime="${new Date(post.data.pubDate).toISOString()}">${formatDate(post.data.pubDate)}</time>
                  </div>
                </div>
              </a>
            </article>
          `).join('') + (posts.length > 5 ? `
            <div class="more-indicator">
              <a href="/tags/${encodeURIComponent(tag)}" class="more-link">
                View all ${posts.length} posts
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          ` : '');
        }
      }

      document.getElementById('posts-preview')?.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    }

    function animate() {
      requestAnimationFrame(animate);
      time += 0.01;

      if (autoRotate && is3D) {
        scene.rotation.y += 0.0004;
      }

      // Pulse animation for nodes
      nodes.forEach((node) => {
        const pulse = Math.sin(time * 2 + node.userData.pulsePhase) * 0.05 + 1;
        if (node !== selectedNode && node !== hoveredNode) {
          node.scale.setScalar(pulse);
        }
      });

      // Update glow positions and pulse (glow follows parent directly)
      glowMeshes.forEach((glow) => {
        const parent = glow.userData.parentNode;
        // Simply copy position - both are in same coordinate space
        glow.position.copy(parent.position);

        // Subtle glow pulse
        const pulse = Math.sin(time * 1.5 + parent.userData.pulsePhase) * 0.03 + 0.12;
        glow.material.opacity = pulse;
      });

      // Rotate particles slowly
      if (particles) {
        particles.rotation.y += 0.0001;
        particles.rotation.x += 0.00005;
      }

      // Update labels
      labels.forEach(label => {
        const node = label.userData.parentNode;
        const worldPos = new THREE.Vector3();
        node.getWorldPosition(worldPos);
        label.position.copy(worldPos);
        label.position.y -= node.userData.radius + 4;
      });

      updateLinks();
      renderer.render(scene, camera);
    }

    // Theme observer
    const observer = new MutationObserver(() => {
      if (scene) {
        const dark = isDark();
        scene.background = new THREE.Color(dark ? 0x0d1117 : 0xf8fafc);
        scene.fog.color = new THREE.Color(dark ? 0x0d1117 : 0xf8fafc);

        if (particles) {
          particles.material.opacity = dark ? 0.6 : 0.3;
        }

        links.forEach(link => {
          if (link.material.opacity < 0.5) {
            link.material.color.setHex(dark ? 0x3d4f5f : 0xbdc3c7);
          }
        });
      }
    });
    observer.observe(document.documentElement, { attributes: true, attributeFilter: ['class'] });

    // Resize handler
    const handleResize = () => {
      const width = container.clientWidth;
      camera.aspect = width / 500;
      camera.updateProjectionMatrix();
      renderer.setSize(width, 500);
    };
    window.addEventListener('resize', handleResize);

    // Cleanup on page unload to prevent memory leaks
    window.addEventListener('beforeunload', () => {
      observer.disconnect();
      window.removeEventListener('resize', handleResize);

      // Dispose Three.js resources
      if (renderer) {
        renderer.dispose();
      }
      if (scene) {
        scene.traverse(obj => {
          if (obj.geometry) obj.geometry.dispose();
          if (obj.material) {
            if (Array.isArray(obj.material)) {
              obj.material.forEach(mat => mat.dispose());
            } else {
              obj.material.dispose();
            }
          }
        });
      }
    });

    init();
    animate();
  </script>
