---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import PostListItem from '../../components/PostListItem.astro';
import { shouldShowDrafts } from '../../utils/env';

export async function getStaticPaths() {
  const showDrafts = shouldShowDrafts();
  const allPosts = await getCollection('blog');
  const publishedPosts = allPosts.filter(post => showDrafts || !post.data.draft);

  const uniqueTags = [...new Set(publishedPosts.flatMap(post => post.data.tags))];

  return uniqueTags.map(tag => {
    const filteredPosts = publishedPosts
      .filter(post => post.data.tags.includes(tag))
      .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

    // Find related tags (co-occurring tags, excluding current)
    const relatedTagCounts = filteredPosts.reduce((acc, post) => {
      post.data.tags.forEach(t => {
        if (t !== tag) acc[t] = (acc[t] || 0) + 1;
      });
      return acc;
    }, {} as Record<string, number>);

    const relatedTags = Object.entries(relatedTagCounts)
      .sort(([,a], [,b]) => b - a)
      .slice(0, 8)
      .map(([t]) => t);

    return {
      params: { tag },
      props: { posts: filteredPosts, relatedTags },
    };
  });
}

const { tag } = Astro.params;
const { posts, relatedTags } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---

<BaseLayout
  title={`${tag} - Jongmin's Dev Blog`}
  description={`Posts tagged with ${tag}`}
>
  <Header />

  <main class="main-content">
    <div class="page-header">
      <a href="/tags" class="back-link">‚Üê All Tags</a>
      <h1>
        <span class="tag-badge">{tag}</span>
        <span class="count">{posts.length} {posts.length === 1 ? 'post' : 'posts'}</span>
      </h1>
    </div>

    <section class="posts">
      {posts.map((post) => (
        <PostListItem
          title={post.data.title}
          description={post.data.description}
          pubDate={post.data.pubDate}
          heroImage={post.data.heroImage}
          slug={post.slug}
          tags={post.data.tags}
        />
      ))}

      {posts.length === 0 && (
        <p class="empty">No posts found with this tag.</p>
      )}
    </section>

    {relatedTags.length > 0 && (
      <section class="related-tags">
        <h2>Related Tags</h2>
        <div class="related-list">
          {relatedTags.map((t) => (
            <a href={`${baseUrl}tags/${encodeURIComponent(t)}`} class="related-tag">
              {t}
            </a>
          ))}
        </div>
      </section>
    )}
  </main>
</BaseLayout>

<style>
  .main-content {
    max-width: 720px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }

  .page-header {
    margin-bottom: 2rem;
  }

  .back-link {
    display: inline-block;
    font-size: 0.875rem;
    color: #0066ff;
    margin-bottom: 1rem;
    text-decoration: none;
  }

  :global(.dark) .back-link {
    color: #569cd6;
  }

  .back-link:hover {
    text-decoration: underline;
  }

  .page-header h1 {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin: 0;
  }

  .tag-badge {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1a1a1a;
  }

  :global(.dark) .tag-badge {
    color: #d4d4d4;
  }

  .count {
    font-size: 0.875rem;
    font-weight: 400;
    color: #888;
  }

  .posts {
    display: flex;
    flex-direction: column;
  }

  .empty {
    text-align: center;
    color: #888;
    padding: 3rem 0;
  }

  /* Related Tags */
  .related-tags {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #e5e5e5;
  }

  :global(.dark) .related-tags {
    border-top-color: #3c3c3c;
  }

  .related-tags h2 {
    font-size: 0.9375rem;
    font-weight: 600;
    color: #1a1a1a;
    margin: 0 0 1rem;
  }

  :global(.dark) .related-tags h2 {
    color: #d4d4d4;
  }

  .related-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .related-tag {
    padding: 0.3rem 0.625rem;
    font-size: 0.8125rem;
    font-weight: 500;
    color: #555;
    background: #f0f0f0;
    border-radius: 6px;
    text-decoration: none;
    transition: all 0.15s;
  }

  :global(.dark) .related-tag {
    color: #bbb;
    background: #252525;
  }

  .related-tag:hover {
    background: #e0e0e0;
    color: #000;
  }

  :global(.dark) .related-tag:hover {
    background: #333;
    color: #fff;
  }

  @media (max-width: 640px) {
    .main-content {
      padding: 1.5rem 1rem;
    }

    .tag-badge {
      font-size: 1.25rem;
    }
  }
</style>
