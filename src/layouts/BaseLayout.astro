---
import SEO from '../components/SEO.astro';
import ScrollProgress from '../components/ScrollProgress.astro';
import KeyboardNavigation from '../components/KeyboardNavigation.astro';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  modifiedTime?: string;
  tags?: string[];
  author?: string;
}

const { 
  title, 
  description = "Jongmin의 개발 블로그", 
  image = "/og-image.jpg",
  type = "website",
  publishedTime,
  modifiedTime,
  tags,
  author
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/logo.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO 최적화 컴포넌트 -->
    <SEO 
      title={title}
      description={description}
      image={image}
      type={type}
      publishedTime={publishedTime}
      modifiedTime={modifiedTime}
      tags={tags}
      author={author}
    />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.8/dist/katex.min.css"
      integrity="sha384-GvrOXuhMATgEsSwCs4smul74iXGOixntILdUW9XmUC6+HX0sLNAK3q71HotJqlAn"
      crossorigin="anonymous"
    />

    <!-- 다크모드 깜빡임 방지 스크립트 (즉시 실행) -->
    <script is:inline>
      // 페이지 로드 전에 즉시 실행되어 깜빡임 방지
      (function() {
        // 페이지 로드 시 전환 효과 비활성화
        document.documentElement.classList.add('no-transition');
        
        const theme = localStorage.getItem('theme');
        const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        
        if (theme === 'dark' || (!theme && systemPrefersDark)) {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }
        
        // 페이지 로드 완료 후 전환 효과 활성화
        window.addEventListener('load', function() {
          setTimeout(function() {
            document.documentElement.classList.remove('no-transition');
          }, 100);
        });
      })();
    </script>

    <title>{title}</title>
  </head>
  <body class="bg-white dark:bg-dark-bg text-gray-900 dark:text-dark-text">
    <style>
      /* 다크모드 전환 시 부드러운 애니메이션 */
      * {
        transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
      }
      
      /* 페이지 로드 시 전환 효과 비활성화 */
      .no-transition * {
        transition: none !important;
      }
    </style>
    
    <!-- 스크롤 진행률 및 맨 위로 버튼 -->
    <ScrollProgress />
    
    <!-- 키보드 네비게이션 -->
    <KeyboardNavigation />
    
    <slot />
    
    <style is:global>
      /* 전역 코드 블록 스타일 */
      .dark pre[class*="language-"] {
        background-color: #161b22 !important;
        border: 1px solid #30363d !important;
      }
      
      .dark code[class*="language-"] {
        color: #f0f6fc !important;
      }
      
      /* Shiki 코드 하이라이팅 다크모드 개선 */
      .dark .shiki {
        background-color: #161b22 !important;
        border: 1px solid #30363d !important;
      }
      
      .dark .shiki code {
        color: #f0f6fc !important;
      }
    </style>
  </body>
</html>