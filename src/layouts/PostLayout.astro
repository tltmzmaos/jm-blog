---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import LikeButton from '../components/LikeButton.astro';
import TableOfContents from '../components/TableOfContents.astro';
import { calculateReadingTime, ReadingTimeIcon } from '../utils/readingTime.js';
import type { SeriesInfo } from '../utils/seriesPosts';

export interface Props {
  frontmatter: {
    title: string;
    description?: string;
    pubDate: Date;
    updatedDate?: Date;
    heroImage?: string;
    tags?: string[];
    author?: string;
  };
  headings?: Array<{ depth: number; slug: string; text: string }>;
  prevPost?: { slug: string; title: string };
  nextPost?: { slug: string; title: string };
  relatedPosts?: Array<{ slug: string; title: string; description?: string }>;
  seriesInfo?: SeriesInfo | null;
  content?: string;
  slug?: string;
}

const { frontmatter, headings = [], prevPost, nextPost, relatedPosts = [], seriesInfo, content, slug: postSlug } = Astro.props;
const { title, description, pubDate, updatedDate, heroImage, tags = [], author = 'Jongmin' } = frontmatter;

const readingTime = calculateReadingTime(content || description || title);
const slug = postSlug || Astro.url.pathname.split('/').filter(p => p).pop() || '';
const ogImage = heroImage || `/og/${slug}.png`;

// Detect math formulas ($ or $$ usage)
const hasMath = content ? /\$\$?[^$]+\$\$?/.test(content) : false;

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
};
---

<BaseLayout
  title={title}
  description={description}
  type="article"
  publishedTime={pubDate.toISOString()}
  modifiedTime={updatedDate?.toISOString()}
  tags={tags}
  author={author}
  image={ogImage}
  hasMath={hasMath}
>
  <div class="reading-progress" aria-hidden="true"></div>
  <Header />

  {headings.length > 0 && <TableOfContents headings={headings} />}

  <article class="article">
    <header class="article-header">
      <div class="meta">
        <time datetime={pubDate.toISOString()}>{formatDate(pubDate)}</time>
        <span class="separator">Â·</span>
        <span class="reading-time">
          <Fragment set:html={ReadingTimeIcon} />
          {readingTime.text}
        </span>
      </div>

      <h1>{title}</h1>

      {description && <p class="description">{description}</p>}

      {tags.length > 0 && (
        <div class="tags">
          {tags.map((tag) => (
            <a href={`/tags/${tag}`} class="tag">#{tag}</a>
          ))}
        </div>
      )}

      {seriesInfo && (
        <nav class="series-nav" aria-label="Series navigation">
          <div class="series-header">
            <span class="series-label">{seriesInfo.name}</span>
            <span class="series-count">Part {seriesInfo.currentPart} of {seriesInfo.totalParts}</span>
          </div>
          <ol class="series-list">
            {seriesInfo.parts.map((part) => (
              <li class:list={[{ 'current': part.partNumber === seriesInfo.currentPart }]}>
                {part.partNumber === seriesInfo.currentPart ? (
                  <span class="series-current">{part.title}</span>
                ) : (
                  <a href={`/posts/${part.slug}`}>{part.title}</a>
                )}
              </li>
            ))}
          </ol>
        </nav>
      )}
    </header>

    {heroImage && (
      <div class="hero-image">
        <img
          src={heroImage}
          alt={title}
          loading="eager"
          decoding="async"
          fetchpriority="high"
          width="720"
          height="400"
        />
      </div>
    )}

    <div class="article-content">
      <slot />
    </div>

    <footer class="article-footer">
      <div class="share-buttons">
        <span class="share-label">Share</span>
        <a
          href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(`https://jongmin.me/posts/${slug}`)}`}
          target="_blank"
          rel="noopener noreferrer"
          class="share-btn"
          aria-label="Share on Twitter"
        >
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
        </a>
        <a
          href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(`https://jongmin.me/posts/${slug}`)}`}
          target="_blank"
          rel="noopener noreferrer"
          class="share-btn"
          aria-label="Share on LinkedIn"
        >
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
        </a>
        <button class="share-btn" id="copy-link-btn" aria-label="Copy link" type="button">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/></svg>
        </button>
      </div>

      <LikeButton postSlug={slug} />

      {relatedPosts.length > 0 && (
        <section class="related-posts">
          <h3 class="section-title">Related Posts</h3>
          <ul>
            {relatedPosts.map((post) => (
              <li>
                <a href={`/posts/${post.slug}`}>
                  <span class="related-title">{post.title}</span>
                  {post.description && <span class="related-desc">{post.description}</span>}
                </a>
              </li>
            ))}
          </ul>
        </section>
      )}

      {(prevPost || nextPost) && (
        <nav class="post-nav" aria-label="Post navigation">
          <h3 class="section-title">Continue Reading</h3>
          {prevPost ? (
            <a href={`/posts/${prevPost.slug}`} class="nav-link prev">
              <span class="nav-label">Previous</span>
              <span class="nav-title">{prevPost.title}</span>
            </a>
          ) : <div />}

          {nextPost && (
            <a href={`/posts/${nextPost.slug}`} class="nav-link next">
              <span class="nav-label">Next</span>
              <span class="nav-title">{nextPost.title}</span>
            </a>
          )}
        </nav>
      )}

      <div class="author-bio">
        <div class="author-info">
          <span class="author-name">{author}</span>
          <span class="author-desc">Software Engineer working on Lab Automation orchestration services.</span>
        </div>
      </div>
    </footer>
  </article>

  <button class="back-to-top" id="back-to-top" aria-label="Back to top" type="button">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M18 15l-6-6-6 6"/>
    </svg>
  </button>
</BaseLayout>

<style>
  .article {
    max-width: 720px;
    margin: 0 auto;
    padding: 2rem 1.5rem 4rem;
  }

  .article-header {
    margin-bottom: 2rem;
  }

  .meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: #888;
    margin-bottom: 1rem;
  }

  .separator {
    color: #ccc;
  }

  .reading-time {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .reading-time :global(svg) {
    width: 14px;
    height: 14px;
  }

  h1 {
    font-size: 2rem;
    font-weight: 700;
    color: #1a1a1a;
    line-height: 1.3;
    margin: 0 0 1rem;
  }

  :global(.dark) h1 {
    color: #d4d4d4;
  }

  .description {
    font-size: 1.125rem;
    color: #666;
    line-height: 1.6;
    margin: 0 0 1rem;
  }

  :global(.dark) .description {
    color: #808080;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.875rem;
    color: #0066ff;
    text-decoration: none;
  }

  .tag:hover {
    text-decoration: underline;
  }

  :global(.dark) .tag {
    color: #569cd6;
  }

  .series-nav {
    margin-top: 1.25rem;
    padding: 1rem 1.25rem;
    background: #f8f9fa;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
  }

  :global(.dark) .series-nav {
    background: #252526;
    border-color: #3c3c3c;
  }

  .series-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.75rem;
  }

  .series-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: #1a1a1a;
  }

  :global(.dark) .series-label {
    color: #d4d4d4;
  }

  .series-count {
    font-size: 0.75rem;
    color: #888;
  }

  .series-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    counter-reset: series;
  }

  .series-list li {
    counter-increment: series;
    font-size: 0.8125rem;
    line-height: 1.5;
  }

  .series-list li::before {
    content: counter(series) ". ";
    color: #888;
    font-weight: 500;
  }

  .series-list li a {
    color: #555;
    text-decoration: none;
  }

  .series-list li a:hover {
    color: #0066ff;
    text-decoration: underline;
  }

  :global(.dark) .series-list li a {
    color: #999;
  }

  :global(.dark) .series-list li a:hover {
    color: #58a6ff;
  }

  .series-list li.current {
    font-weight: 600;
  }

  .series-current {
    color: #0066ff;
  }

  :global(.dark) .series-current {
    color: #58a6ff;
  }

  .hero-image {
    margin-bottom: 2rem;
    border-radius: 8px;
    overflow: hidden;
  }

  .hero-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .article-content {
    font-size: 1.0625rem;
    line-height: 1.8;
    color: #333;
  }

  :global(.dark) .article-content {
    color: #d4d4d4;
  }

  .article-content :global(h2) {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1a1a1a;
    margin: 2.5rem 0 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid #e5e5e5;
  }

  :global(.dark) .article-content :global(h2) {
    color: #d4d4d4;
    border-bottom-color: #3c3c3c;
  }

  .article-content :global(h3) {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1a1a1a;
    margin: 2rem 0 0.75rem;
  }

  :global(.dark) .article-content :global(h3) {
    color: #d4d4d4;
  }

  .article-content :global(p) {
    margin: 0 0 1.5rem;
  }

  .article-content :global(a) {
    color: #0066ff;
    text-decoration: underline;
  }

  :global(.dark) .article-content :global(a) {
    color: #569cd6;
  }

  .article-content :global(code) {
    font-family: 'SF Mono', 'Fira Code', 'JetBrains Mono', Menlo, Monaco, Consolas, monospace;
    font-size: 0.875em;
    padding: 0.2em 0.5em;
    background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
    border: 1px solid #e0e4e8;
    border-radius: 6px;
    color: #d63384;
    font-weight: 500;
  }

  :global(.dark) .article-content :global(code) {
    background: linear-gradient(135deg, #2a2d2e 0%, #252526 100%);
    border-color: #3c3c3c;
    color: #ce9178;
  }

  .article-content :global(pre) {
    position: relative;
    padding: 1rem;
    background: #1e1e1e !important;
    border: 1px solid #3c3c3c;
    border-radius: 6px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .article-content :global(pre code) {
    padding: 0;
    background: transparent !important;
    border: none;
    font-size: 0.875rem;
    color: #d4d4d4;
    font-weight: 400;
    line-height: 1.45;
  }

  /* Reset Shiki line backgrounds */
  .article-content :global(pre code .line),
  .article-content :global(pre code span) {
    background: transparent !important;
  }

  .article-content :global(.code-header) {
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    padding: 0.375rem 0.75rem;
    background: #252526;
    border-bottom: 1px solid #3c3c3c;
    border-radius: 6px 6px 0 0;
  }

  .article-content :global(.code-lang) {
    font-size: 0.6875rem;
    font-weight: 500;
    color: #808080;
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

  .article-content :global(.copy-btn) {
    padding: 0.125rem 0.5rem;
    font-size: 0.6875rem;
    font-weight: 400;
    color: #808080;
    background: transparent;
    border: 1px solid #3c3c3c;
    border-radius: 4px;
    cursor: pointer;
    opacity: 0;
    transition: all 0.15s ease;
  }

  .article-content :global(pre:hover .copy-btn) {
    opacity: 1;
  }

  @media (hover: none) {
    .article-content :global(.copy-btn) {
      opacity: 1;
    }
  }

  .article-content :global(.copy-btn:hover) {
    background: #3c3c3c;
    color: #d4d4d4;
  }

  .article-content :global(.copy-btn.copied) {
    color: #6a9955;
    border-color: #6a9955;
  }

  .article-content :global(pre:has(.code-header)) {
    padding-top: 2.5rem;
  }

  .article-content :global(blockquote) {
    margin: 1.5rem 0;
    padding: 0.5rem 1rem;
    border-left: 3px solid #0066ff;
    background: #f9f9f9;
    color: #666;
  }

  :global(.dark) .article-content :global(blockquote) {
    background: #252526;
    color: #808080;
    border-left-color: #569cd6;
  }

  .article-content :global(ul),
  .article-content :global(ol) {
    margin: 1rem 0 1.5rem;
    padding-left: 1.5rem;
    list-style-position: outside;
  }

  .article-content :global(ul) {
    list-style: disc;
  }

  .article-content :global(ol) {
    list-style: decimal;
  }

  .article-content :global(ul ul) {
    list-style: circle;
  }

  .article-content :global(li) {
    margin: 0.5rem 0;
    padding-left: 0.125rem;
  }

  .article-content :global(ul li::marker) {
    color: currentColor;
  }

  .article-content :global(ol li::marker) {
    color: #555;
    font-weight: 600;
  }

  :global(.dark) .article-content :global(ol li::marker) {
    color: #808080;
  }

  .article-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem 0;
  }

  .article-content :global(hr) {
    border: none;
    border-top: 1px solid #e5e5e5;
    margin: 2rem 0;
  }

  :global(.dark) .article-content :global(hr) {
    border-top-color: #3c3c3c;
  }

  /* Mermaid diagram container */
  .article-content :global(.mermaid-container) {
    display: flex;
    justify-content: center;
    margin: 1.5rem 0;
    padding: 1.5rem;
    background: #ffffff;
    border: 1px solid #e5e5e5;
    border-radius: 12px;
    overflow-x: auto;
  }

  /* Keep mermaid diagrams light in both modes for best text visibility */
  :global(.dark) .article-content :global(.mermaid-container) {
    background: #ffffff;
    border-color: #d0d0d0;
  }

  .article-content :global(.mermaid-container svg) {
    max-width: 100%;
    height: auto;
  }

  .article-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
    font-size: 0.95rem;
  }

  .article-content :global(table) :global(th),
  .article-content :global(table) :global(td) {
    text-align: left;
    padding: 0.75rem 0.875rem;
    border-bottom: 1px solid #e5e5e5;
    vertical-align: top;
  }

  .article-content :global(table) :global(th) {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    color: #666;
    background: #fafafa;
  }

  :global(.dark) .article-content :global(table) :global(th) {
    color: #808080;
    background: #252526;
  }

  :global(.dark) .article-content :global(table) :global(td),
  :global(.dark) .article-content :global(table) :global(th) {
    border-bottom-color: #3c3c3c;
  }

  .article-content :global(table) :global(tr:nth-child(even) td) {
    background: #fafafa;
  }

  :global(.dark) .article-content :global(table) :global(tr:nth-child(even) td) {
    background: #2a2d2e;
  }

  .article-content :global(.table-wrap) {
    overflow-x: auto;
  }

  .article-content :global(table) {
    display: block;
    overflow-x: auto;
  }

  .article-content :global(table) :global(code) {
    font-size: 0.85em;
  }

  .article-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #e5e5e5;
  }

  :global(.dark) .article-footer {
    border-top-color: #3c3c3c;
  }

  .related-posts {
    margin-top: 2rem;
    padding: 1.25rem;
    background: #fafafa;
    border: 1px solid #e6e6e6;
    border-radius: 12px;
  }

  :global(.dark) .related-posts {
    background: #252526;
    border-color: #3c3c3c;
  }

  .section-title {
    font-size: 0.95rem;
    font-weight: 600;
    color: #222;
    margin: 0 0 0.75rem;
    letter-spacing: 0.02em;
    text-transform: uppercase;
  }

  :global(.dark) .section-title {
    color: #d4d4d4;
  }

  .related-posts ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .related-posts li a {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
    padding: 0.75rem;
    background: #ffffff;
    border: 1px solid #e3e3e3;
    border-radius: 6px;
    text-decoration: none;
    transition: background 0.15s;
  }

  .related-posts li a:hover {
    background: #f5f5f5;
  }

  :global(.dark) .related-posts li a {
    background: #2a2d2e;
    border-color: #3c3c3c;
  }

  :global(.dark) .related-posts li a:hover {
    background: #333536;
  }

  .related-title {
    font-size: 0.9375rem;
    font-weight: 500;
    color: #111;
  }

  :global(.dark) .related-title {
    color: #d4d4d4;
  }

  .related-desc {
    font-size: 0.8125rem;
    color: #4f4f4f;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  :global(.dark) .related-desc {
    color: #808080;
  }

  .post-nav {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-top: 2rem;
    padding-top: 1.25rem;
    border-top: 1px dashed #e5e5e5;
  }

  :global(.dark) .post-nav {
    border-top-color: #3c3c3c;
  }

  .post-nav .section-title {
    grid-column: 1 / -1;
    margin-bottom: 0;
  }

  .nav-link {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding: 1rem;
    background: #f5f5f5;
    border-radius: 8px;
    text-decoration: none;
    transition: background 0.15s;
  }

  .nav-link:hover {
    background: #eee;
  }

  :global(.dark) .nav-link {
    background: #252526;
  }

  :global(.dark) .nav-link:hover {
    background: #2a2d2e;
  }

  .nav-link.next {
    text-align: right;
  }

  .nav-label {
    font-size: 0.75rem;
    color: #888;
  }

  .nav-title {
    font-size: 0.9375rem;
    font-weight: 500;
    color: #1a1a1a;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  :global(.dark) .nav-title {
    color: #d4d4d4;
  }

  .reading-progress {
    position: fixed;
    top: 0;
    left: 0;
    width: 0%;
    height: 3px;
    background: #0066ff;
    z-index: 200;
    transition: width 0.1s ease-out;
  }

  :global(.dark) .reading-progress {
    background: #58a6ff;
  }

  .share-buttons {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .share-label {
    font-size: 0.8125rem;
    font-weight: 500;
    color: #888;
    margin-right: 0.25rem;
  }

  .share-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    color: #666;
    background: #f5f5f5;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.15s;
  }

  .share-btn:hover {
