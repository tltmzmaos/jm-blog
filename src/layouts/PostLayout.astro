---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import LikeButton from '../components/LikeButton.astro';
import TableOfContents from '../components/TableOfContents.astro';
import { calculateReadingTime, ReadingTimeIcon } from '../utils/readingTime.js';

export interface Props {
  frontmatter: {
    title: string;
    description?: string;
    pubDate: Date;
    updatedDate?: Date;
    heroImage?: string;
    tags?: string[];
    author?: string;
  };
  headings?: Array<{ depth: number; slug: string; text: string }>;
  prevPost?: { slug: string; title: string };
  nextPost?: { slug: string; title: string };
  relatedPosts?: Array<{ slug: string; title: string; description?: string }>;
  content?: string;
  slug?: string;
}

const { frontmatter, headings = [], prevPost, nextPost, relatedPosts = [], content, slug: postSlug } = Astro.props;
const { title, description, pubDate, updatedDate, heroImage, tags = [], author = 'Jongmin' } = frontmatter;

const readingTime = calculateReadingTime(content || description || title);
const slug = postSlug || Astro.url.pathname.split('/').filter(p => p).pop() || '';

// Detect math formulas ($ or $$ usage)
const hasMath = content ? /\$\$?[^$]+\$\$?/.test(content) : false;

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
};
---

<BaseLayout
  title={title}
  description={description}
  type="article"
  publishedTime={pubDate.toISOString()}
  modifiedTime={updatedDate?.toISOString()}
  tags={tags}
  author={author}
  image={heroImage}
  hasMath={hasMath}
>
  <div class="reading-progress" aria-hidden="true"></div>
  <Header />

  {headings.length > 0 && <TableOfContents headings={headings} />}

  <article class="article">
    <header class="article-header">
      <div class="meta">
        <time datetime={pubDate.toISOString()}>{formatDate(pubDate)}</time>
        <span class="separator">Â·</span>
        <span class="reading-time">
          <Fragment set:html={ReadingTimeIcon} />
          {readingTime.text}
        </span>
      </div>

      <h1>{title}</h1>

      {description && <p class="description">{description}</p>}

      {tags.length > 0 && (
        <div class="tags">
          {tags.map((tag) => (
            <a href={`/tags/${tag}`} class="tag">#{tag}</a>
          ))}
        </div>
      )}
    </header>

    {heroImage && (
      <div class="hero-image">
        <img
          src={heroImage}
          alt={title}
          loading="eager"
          decoding="async"
          fetchpriority="high"
          width="720"
          height="400"
        />
      </div>
    )}

    <div class="article-content">
      <slot />
    </div>

    <footer class="article-footer">
      <LikeButton postSlug={slug} />

      {relatedPosts.length > 0 && (
        <section class="related-posts">
          <h3 class="section-title">Related Posts</h3>
          <ul>
            {relatedPosts.map((post) => (
              <li>
                <a href={`/posts/${post.slug}`}>
                  <span class="related-title">{post.title}</span>
                  {post.description && <span class="related-desc">{post.description}</span>}
                </a>
              </li>
            ))}
          </ul>
        </section>
      )}

      {(prevPost || nextPost) && (
        <nav class="post-nav" aria-label="Post navigation">
          <h3 class="section-title">Continue Reading</h3>
          {prevPost ? (
            <a href={`/posts/${prevPost.slug}`} class="nav-link prev">
              <span class="nav-label">Previous</span>
              <span class="nav-title">{prevPost.title}</span>
            </a>
          ) : <div />}

          {nextPost && (
            <a href={`/posts/${nextPost.slug}`} class="nav-link next">
              <span class="nav-label">Next</span>
              <span class="nav-title">{nextPost.title}</span>
            </a>
          )}
        </nav>
      )}
    </footer>
  </article>
</BaseLayout>

<style>
  .article {
    max-width: 720px;
    margin: 0 auto;
    padding: 2rem 1.5rem 4rem;
  }

  .article-header {
    margin-bottom: 2rem;
  }

  .meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: #888;
    margin-bottom: 1rem;
  }

  .separator {
    color: #ccc;
  }

  .reading-time {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .reading-time :global(svg) {
    width: 14px;
    height: 14px;
  }

  h1 {
    font-size: 2rem;
    font-weight: 700;
    color: #1a1a1a;
    line-height: 1.3;
    margin: 0 0 1rem;
  }

  :global(.dark) h1 {
    color: #f0f0f0;
  }

  .description {
    font-size: 1.125rem;
    color: #666;
    line-height: 1.6;
    margin: 0 0 1rem;
  }

  :global(.dark) .description {
    color: #888;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.875rem;
    color: #0066ff;
    text-decoration: none;
  }

  .tag:hover {
    text-decoration: underline;
  }

  :global(.dark) .tag {
    color: #58a6ff;
  }

  .hero-image {
    margin-bottom: 2rem;
    border-radius: 8px;
    overflow: hidden;
  }

  .hero-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .article-content {
    font-size: 1.0625rem;
    line-height: 1.8;
    color: #333;
  }

  :global(.dark) .article-content {
    color: #d0d0d0;
  }

  .article-content :global(h2) {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1a1a1a;
    margin: 2.5rem 0 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid #e5e5e5;
  }

  :global(.dark) .article-content :global(h2) {
    color: #f0f0f0;
    border-bottom-color: #333;
  }

  .article-content :global(h3) {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1a1a1a;
    margin: 2rem 0 0.75rem;
  }

  :global(.dark) .article-content :global(h3) {
    color: #f0f0f0;
  }

  .article-content :global(p) {
    margin: 0 0 1.5rem;
  }

  .article-content :global(a) {
    color: #0066ff;
    text-decoration: underline;
  }

  :global(.dark) .article-content :global(a) {
    color: #58a6ff;
  }

  .article-content :global(code) {
    font-size: 0.9em;
    padding: 0.2em 0.4em;
    background: #f5f5f5;
    border-radius: 4px;
  }

  :global(.dark) .article-content :global(code) {
    background: #2a2a2a;
  }

  .article-content :global(pre) {
    position: relative;
    padding: 1rem;
    background: #1a1a1a;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .article-content :global(pre code) {
    padding: 0;
    background: transparent;
    font-size: 0.875rem;
    color: #f0f0f0;
  }

  .article-content :global(.copy-btn) {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    padding: 0.375rem 0.625rem;
    font-size: 0.75rem;
    color: #888;
    background: #2a2a2a;
    border: 1px solid #444;
    border-radius: 4px;
    cursor: pointer;
    opacity: 0;
    transition: opacity 0.15s, background 0.15s;
  }

  .article-content :global(pre:hover .copy-btn) {
    opacity: 1;
  }

  .article-content :global(.copy-btn:hover) {
    background: #333;
    color: #f0f0f0;
  }

  .article-content :global(.copy-btn.copied) {
    color: #4ade80;
    border-color: #4ade80;
  }

  .article-content :global(blockquote) {
    margin: 1.5rem 0;
    padding: 0.5rem 1rem;
    border-left: 3px solid #0066ff;
    background: #f9f9f9;
    color: #666;
  }

  :global(.dark) .article-content :global(blockquote) {
    background: #242424;
    color: #888;
    border-left-color: #58a6ff;
  }

  .article-content :global(ul),
  .article-content :global(ol) {
    margin: 1rem 0 1.5rem;
    padding-left: 1.5rem;
    list-style-position: outside;
  }

  .article-content :global(ul) {
    list-style: disc;
  }

  .article-content :global(ol) {
    list-style: decimal;
  }

  .article-content :global(ul ul) {
    list-style: circle;
  }

  .article-content :global(li) {
    margin: 0.5rem 0;
    padding-left: 0.125rem;
  }

  .article-content :global(ul li::marker) {
    color: currentColor;
  }

  .article-content :global(ol li::marker) {
    color: #555;
    font-weight: 600;
  }

  :global(.dark) .article-content :global(ol li::marker) {
    color: #aaa;
  }

  .article-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem 0;
  }

  .article-content :global(hr) {
    border: none;
    border-top: 1px solid #e5e5e5;
    margin: 2rem 0;
  }

  :global(.dark) .article-content :global(hr) {
    border-top-color: #333;
  }

  .article-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
    font-size: 0.95rem;
  }

  .article-content :global(table) :global(th),
  .article-content :global(table) :global(td) {
    text-align: left;
    padding: 0.75rem 0.875rem;
    border-bottom: 1px solid #e5e5e5;
    vertical-align: top;
  }

  .article-content :global(table) :global(th) {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    color: #666;
    background: #fafafa;
  }

  :global(.dark) .article-content :global(table) :global(th) {
    color: #aaa;
    background: #1f1f1f;
  }

  :global(.dark) .article-content :global(table) :global(td),
  :global(.dark) .article-content :global(table) :global(th) {
    border-bottom-color: #333;
  }

  .article-content :global(table) :global(tr:nth-child(even) td) {
    background: #fafafa;
  }

  :global(.dark) .article-content :global(table) :global(tr:nth-child(even) td) {
    background: #202020;
  }

  .article-content :global(.table-wrap) {
    overflow-x: auto;
  }

  .article-content :global(table) {
    display: block;
    overflow-x: auto;
  }

  .article-content :global(table) :global(code) {
    font-size: 0.85em;
  }

  .article-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #e5e5e5;
  }

  :global(.dark) .article-footer {
    border-top-color: #333;
  }

  .related-posts {
    margin-top: 2rem;
    padding: 1.25rem;
    background: #fafafa;
    border: 1px solid #e6e6e6;
    border-radius: 12px;
  }

  :global(.dark) .related-posts {
    background: #1c1c1c;
    border-color: #2a2a2a;
  }

  .section-title {
    font-size: 0.95rem;
    font-weight: 600;
    color: #222;
    margin: 0 0 0.75rem;
    letter-spacing: 0.02em;
    text-transform: uppercase;
  }

  :global(.dark) .section-title {
    color: #e6e6e6;
  }

  .related-posts ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .related-posts li a {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
    padding: 0.75rem;
    background: #ffffff;
    border: 1px solid #e3e3e3;
    border-radius: 6px;
    text-decoration: none;
    transition: background 0.15s;
  }

  .related-posts li a:hover {
    background: #f5f5f5;
  }

  :global(.dark) .related-posts li a {
    background: #202020;
    border-color: #2c2c2c;
  }

  :global(.dark) .related-posts li a:hover {
    background: #252525;
  }

  .related-title {
    font-size: 0.9375rem;
    font-weight: 500;
    color: #111;
  }

  :global(.dark) .related-title {
    color: #f5f5f5;
  }

  .related-desc {
    font-size: 0.8125rem;
    color: #4f4f4f;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  :global(.dark) .related-desc {
    color: #b0b0b0;
  }

  .post-nav {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-top: 2rem;
    padding-top: 1.25rem;
    border-top: 1px dashed #e5e5e5;
  }

  :global(.dark) .post-nav {
    border-top-color: #333;
  }

  .post-nav .section-title {
    grid-column: 1 / -1;
    margin-bottom: 0;
  }

  .nav-link {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding: 1rem;
    background: #f5f5f5;
    border-radius: 8px;
    text-decoration: none;
    transition: background 0.15s;
  }

  .nav-link:hover {
    background: #eee;
  }

  :global(.dark) .nav-link {
    background: #242424;
  }

  :global(.dark) .nav-link:hover {
    background: #2a2a2a;
  }

  .nav-link.next {
    text-align: right;
  }

  .nav-label {
    font-size: 0.75rem;
    color: #888;
  }

  .nav-title {
    font-size: 0.9375rem;
    font-weight: 500;
    color: #1a1a1a;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  :global(.dark) .nav-title {
    color: #f0f0f0;
  }

  .reading-progress {
    position: fixed;
    top: 0;
    left: 0;
    width: 0%;
    height: 3px;
    background: #0066ff;
    z-index: 200;
    transition: width 0.1s ease-out;
  }

  :global(.dark) .reading-progress {
    background: #58a6ff;
  }

  @media (max-width: 640px) {
    .article {
      padding: 1.5rem 1rem 3rem;
    }

    h1 {
      font-size: 1.5rem;
    }

    .post-nav {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Reading progress bar
    const progressBar = document.querySelector('.reading-progress') as HTMLElement;
    const article = document.querySelector('.article-content');

    if (progressBar && article) {
      const updateProgress = () => {
        const articleRect = article.getBoundingClientRect();
        const articleTop = articleRect.top + window.scrollY;
        const articleHeight = articleRect.height;
        const windowHeight = window.innerHeight;
        const scrollY = window.scrollY;

        const start = articleTop;
        const end = articleTop + articleHeight - windowHeight;
        const progress = Math.min(100, Math.max(0, ((scrollY - start) / (end - start)) * 100));

        progressBar.style.width = `${progress}%`;
      };

      window.addEventListener('scroll', updateProgress, { passive: true });
      updateProgress();
    }

    // Code block copy button
    document.querySelectorAll('.article-content pre').forEach((pre) => {
      const btn = document.createElement('button');
      btn.className = 'copy-btn';
      btn.textContent = 'Copy';
      btn.type = 'button';

      btn.addEventListener('click', async () => {
        const code = pre.querySelector('code');
        const text = code?.textContent || pre.textContent || '';

        try {
          await navigator.clipboard.writeText(text);
          btn.textContent = 'Copied!';
          btn.classList.add('copied');

          setTimeout(() => {
            btn.textContent = 'Copy';
            btn.classList.remove('copied');
          }, 2000);
        } catch {
          btn.textContent = 'Failed';
          setTimeout(() => {
            btn.textContent = 'Copy';
          }, 2000);
        }
      });

      pre.appendChild(btn);
    });
  });
</script>
